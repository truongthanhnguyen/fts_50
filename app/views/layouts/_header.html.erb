<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layout.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layout.home"), root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t("layout.user"), new_user_session_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layout.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), "#" %></li>
              <li><%= link_to t("setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
